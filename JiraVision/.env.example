# Exemple de configuration (NE PAS committer de secrets dans .env)

# Atlassian OAuth
ATLASSIAN_CLIENT_ID=
ATLASSIAN_CLIENT_SECRET=
# ATLASSIAN_REDIRECT_URI is optional. If not set or empty, the redirect URI 
# will be dynamically built from the incoming request (useful for Codespaces, 
# dynamic environments). For production with a fixed URL, set it explicitly:
# ATLASSIAN_REDIRECT_URI=https://your-domain.com/oauth/callback
ATLASSIAN_REDIRECT_URI=
ATLASSIAN_SCOPES=read:jira-work

# Cookie/session signing (générer une valeur longue et aléatoire)
APP_SECRET_KEY=

# LLM (optionnel)
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=qwen2.5:3b
LLM_TIMEOUT=600

# (Optionnel) OpenAI si LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Feature flags
ENABLE_POC_UI=true
ENABLE_DEBUG_ROUTES=false

# ai-service proxy (optional)
AI_SERVICE_URL=http://ai-service:8000
AI_AUTH_ENABLED=false
AI_SHARED_SECRET=dev-shared-secret
AI_TOKEN_TTL_SECONDS=300

# Redis (docker-compose fournit déjà ça)
REDIS_HOST=redis
REDIS_PORT=6379

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
